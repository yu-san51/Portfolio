<div class="container">
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10">
			<h3 class="text-center">契約の申請が届いております</h3>
			<div class="form-wrapper">
				<div class="form-header"></div>
					<div class="form">

					<%= render "contracts/contract_content", item: @item %>
					<div class="field">
						<p class="field_title">申請者名</p>
						<p class="field_show"><%= link_to "申請者", user_path(@contract.contractor.id) %></p>
					</div>


					<%= form_for(@contract, url: contract_path(@contract.id)) do |f| %>

						<%= f.hidden_field :is_contractee_status, value: '履行中' %>
						<div class="actions">
							<%= f.submit "この条件で契約する", class: "button" %>
						</div>
					<% end %>

					<div class="actions">
						<%= link_to "契約しない", contract_path, method: :delete, class: "button" %>
					</div>

					<div class="form-footer">
					</div>
				</div><!--form-->
			</div><!--wrapper-->
		</div><!--col-->
	</div><!--row-->
</div><!--container-->