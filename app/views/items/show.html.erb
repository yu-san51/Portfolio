<div class="container">
	<div class="row">
		<div class="col-xs-3"><!--提案者紹介-->
			<table class="table">
				<tbody>
					<tr>
						<%= attachment_image_tag @item.user, :image, size:"280x280", class: "img-circle pull-left profile-img", fallback: ("no_image.jpg") %><br />

						<%= link_to "#{@item.user.name}　", user_path(@item.user) %>
						<span class= 'badge badge-primary'><%= @item.user.sex %></span>
					</tr>
				</tbody>
			</table>
		</div><!--col-->

		<div class="col-xs-offset-1 col-xs-8"><!--案件紹介-->
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= @item.is_active %>
						</td>
					</tr>
					<tr>
						<td>
						<%= @item.title %>
						</td>
					</tr>
					<tr>
						<td><%= @item.price %> 円　　　<span class= 'badge badge-primary'><%= @item.is_continue %></span></td>
					</tr>
					<tr>
						<td>
							<%= simple_format(@item.body) %>
						</td>
					</tr>
					<tr>
						<td>希望する性別   <span class= 'badge badge-primary'><%= @item.prefer_sex %></span></td>
					</tr>
					<tr>
						<td>目安日数</td>
						<td><%= @item.duration %></td>
					</tr>
					<tr>
						<td><span class= 'badge badge-primary'><%= @item.style.name %></span></td>
					</tr>
					<tr>
						<td><!--気になる案件-->
							<div id="favorites_buttons_<%= @item.id %>">
								<%= render "favorites/favorite", item: @item %>
							</div>
						</td>
					</tr>

					<% if @item.is_active == "受付中" && @item.user != current_user %>
					<!-- チャットルームを作る/
							契約画面へ -->
					<tr>
						<td>
							<%= link_to "チャットで条件の確認や交渉をする", item_rooms_path(@item.id), method: :post, class: "btn btn-success" %>
						</td>
						<td>
							<%= link_to "契約確認画面へ", confirm_item_contracts(@item.id), class: "btn btn-primary" %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div><!--row-->
</div><!--container-->