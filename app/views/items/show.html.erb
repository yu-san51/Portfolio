<div class="container">
	<div class="row">
		<div class="col-xs-3"><!--提案者紹介-->
			<table class="table">
				<tbody>
					<tr>
						<%= attachment_image_tag @item.user, :image, size:"100x100", class: "img-circle pull-left profile-img", image_tag: ("no_image.jpg") %><br />

						<%= link_to "#{@item.user.name}", user_path(@item.user) %>
						<span>  <%= @item.user.sex %></span>
					</tr>
				</tbody>
			</table>
		</div><!--col-->

		<div class="col-xs-9"><!--案件紹介-->
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= @item.is_active %>
						</td>
					</tr>
					<tr>
						<td>
						<%= @item.title %>
						</td>
					</tr>
					<tr>
						<td><%= @item.price %> 円　　　<span class= 'badge badge-primary'><%= @item.is_continue %></span></td>
					</tr>
					<tr>
						<td>
							<%= simple_format(@item.body) %>
						</td>
					</tr>
					<tr>
						<td>希望する性別   <span class= 'badge badge-primary'><%= @item.prefer_sex %></span></td>
					</tr>
					<tr>
						<td>目安日数</td>
						<td><%= @item.duration %></td>
					</tr>
					<tr>
						<td><span class= 'badge badge-primary'><%= @item.style.name %></span></td>
					</tr>
					<tr>
						<td>
							<% if @item.is_active == "受付中" %>
								チャットで案件の交渉や、確認をしてみる
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div><!--row-->
</div><!--container-->