	<% if item.favorited_by?(current_user) %>

		<%= link_to favorite_path(current_user.favorites.find_by(item_id: item.id).id), method: :delete, remote: true do %>
		  <p>気になる解除：<i class="fa fa-heart" aria-hedden="true" style="color: red;"></i></p>
		<% end %>

	<% else %><!--no nice-->
		<%= link_to item_favorites_path(item.id), method: :post, remote: true do %>
			<p>気になる案件：<i class="fa fa-heart" aria-hidden="true"></i></p>
		<% end %>
	<% end %>