<div class="form-wrapper">
  <h1>Log in</h1>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "field_title" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field_input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "field_title" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "field_input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"button" %>
      </div>
    <% end %><!--form-->
  </div>

    <div class="form-footer">
      <%= render "devise/shared/links" %>
    </div>
</div>