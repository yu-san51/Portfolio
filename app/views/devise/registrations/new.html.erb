<div class="container">
  <div class="col-xs-offset-1 col-xs-10">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.radio_button :sex, :true, checked: :true %>
        <%= f.label :sex, "男性", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :sex, :false %>
        <%= f.label :sex, "女性", {value: :false, style: "display: inline-block;"} %>
      </div>

      <div class="field">
        <%= f.radio_button :type, :Teacher, checked: :true %>
        <%= f.label :type, "先生として登録", {value: :Teacher, style: "display: inline-block;"} %>
        <%= f.radio_button :type, :Student %>
        <%= f.label :type, "生徒として登録", {value: :Student, style: "display: inline-block;"} %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>