<div class="container">
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10">
			<div class="row">
				<h3>あなたのページ</h3>
				<div class="col-xs-4">
					<%= attachment_image_tag @user, :image, size: "300x300", class: "img-circle pull-left profile-img", fallback:"no_image.jpg" %><br />
					<span class= 'badge badge-primary'><%= @user.sex %></span><br />
					<% if @user == current_user %>
						<p><%= link_to "プロフィール編集", edit_user_path(@user.id), class: "pull-right"%></p>
					<% end %>
				</div><!--サイドバー-->

				<div class="col-xs-offset-1 col-xs-7">
					<table>
						<tbody>
							<tr>
								<td><%= @user.name %></td>
							</tr>
							<tr>
								<td><%= simple_format(@user.introduction) %></td>
							</tr>
						</tbody>
					</table>
				</div>


			</div>

			<div class="row text-center">
				<h3>あなたの案件一覧</h3>
				<%= render "items/item_index", items: @items %>
			</div>
		</div><!--col-->
	</div><!--row-->
</div><!--container-->